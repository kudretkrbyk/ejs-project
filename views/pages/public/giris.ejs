<%- include('../../partials/header') %>

    <!-- Giriş Sayfası: Modern ve Marka Uyumlu Tasarım -->
    <div class="relative w-full min-h-screen flex items-center justify-center animated-gradient">
        <!-- Arka plan overlay -->
        <div class="absolute inset-0 bg-black opacity-30 z-0"></div>
        <div class="container mx-auto px-6 md:px-0 flex justify-center items-center z-10">
            <div class="bg-brand-dark bg-opacity-90 w-full max-w-md rounded-xl shadow-2xl p-8">
                <!-- Giriş Formu Başlığı -->
                <h1 class="text-3xl font-extrabold text-center text-white mb-8">Giriş Yap</h1>
                <!-- Giriş Formu -->
                <form action="/giris" method="POST" class="space-y-6">
                    <!-- E-posta Alanı -->
                    <div>
                        <label for="email" class="block text-gray-200 text-sm font-bold mb-2">E-posta Adresi</label>
                        <input name="email" id="email" type="email" placeholder="ornek@mail.com" required
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <!-- Şifre Alanı -->
                    <div>
                        <label for="password" class="block text-gray-200 text-sm font-bold mb-2">Şifre</label>
                        <input name="password" id="password" type="password" placeholder="******************" required
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <!-- Hata Mesajı Alanı (isteğe bağlı, sunucu tarafı için) -->
                    <% if (typeof error !=='undefined' ) { %>
                        <div class="text-red-500 text-sm text-center">
                            <%= error %>
                        </div>
                        <% } %>
                            <!-- Giriş Butonu -->
                            <button type="submit"
                                class="btn btn-primary group w-full font-bold py-3 px-4  shadow-lg  text-white text-lg relative overflow-hidden">
                                <span class="bg-overlay"></span>
                                <span class="border-anim top"></span><span class="border-anim bottom"></span><span
                                    class="border-anim left"></span><span class="border-anim right"></span>
                                <span class="text-content">Giriş Yap</span>
                            </button>
                            <!-- Şifremi Unuttum ve Kayıt Ol Linkleri -->
                            <div class="flex flex-col items-center mt-4 space-y-2">
                                <a href="/sifremi-unuttum" class="font-bold text-sm text-brand-red hover:text-opacity-80">Şifreni mi
                                    unuttun?</a>
                                <p class="text-gray-300 text-sm">Hesabın yok mu? <a href="/kayit"
                                        class="font-bold text-brand-red hover:text-opacity-80">Hemen Kayıt Ol</a>.</p>
                            </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>