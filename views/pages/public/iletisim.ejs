<%- include('../../partials/header') %>

  <main class="min-h-screen w-full overflow-hidden relative md:p-12 p-4 bg-brand-dark-100 font-chakra">
    <section class="text-white relative z-10">
      <div class="container mx-auto space-y-24">

        <!-- ÜST ALAN -->
        <div class="flex flex-col md:flex-row items-start justify-between gap-10" data-aos="fade-up"
          data-aos-duration="800">
          <!-- Şirket Bilgileri -->
          <div class="space-y-4 md:w-1/3">
            <h4 class="text-2xl font-bold text-brand-red">İletişim Bilgileri</h4>
            <ul class="text-gray-300 text-base space-y-2 leading-relaxed">
              <li><strong>Şirket:</strong> Lorem Web Hizmetleri A.Ş.</li>
              <li><strong>Telefon:</strong> +90 553 534 25 34</li>
              <li><strong>E-posta:</strong> info@lorem.com</li>
              <li><strong>Adres:</strong> İzmit / Kocaeli</li>
            </ul>
            <!-- Sosyal Medya -->
            <div class="flex space-x-6 mt-6 text-2xl">
              <a href="#" class="text-gray-400 hover:text-brand-red transition"><i class="fab fa-facebook-f"></i></a>
              <a href="#" class="text-gray-400 hover:text-brand-red transition"><i class="fab fa-twitter"></i></a>
              <a href="#" class="text-gray-400 hover:text-brand-red transition"><i class="fab fa-instagram"></i></a>
              <a href="#" class="text-gray-400 hover:text-brand-red transition"><i class="fab fa-linkedin-in"></i></a>
            </div>
          </div>

          <!-- Harita -->
          <div class="md:w-2/3 w-full">
            <iframe class="rounded-md shadow-md w-full h-64 md:h-80"
              src="https://maps.google.com/maps?q=Kocaeli&t=&z=13&ie=UTF8&iwloc=&output=embed" allowfullscreen
              loading="lazy"></iframe>
          </div>
        </div>

        <!-- FORM ALANI -->
        <div class="bg-brand-dark rounded-xl p-6 md:p-10 shadow-xl max-w-4xl mx-auto" data-aos="fade-up"
          data-aos-duration="800">
          <h4 class="text-3xl font-bold mb-6 text-center">İletişim Formu</h4>
          <form action="/iletisim" method="POST" class="grid gap-6 md:grid-cols-2">
            <div>
              <label class="block mb-2 text-sm font-medium text-gray-300">Ad Soyad</label>
              <input type="text" name="FormFullName"
                class="w-full p-3 rounded bg-brand-dark-100 border border-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-brand-red transition"
                required />
            </div>

            <div>
              <label class="block mb-2 text-sm font-medium text-gray-300">Telefon</label>
              <input type="tel" name="FormNumber"
                class="w-full p-3 rounded bg-brand-dark-100 border border-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-brand-red transition"
                required />
            </div>

            <div class="md:col-span-2">
              <label class="block mb-2 text-sm font-medium text-gray-300">E-posta</label>
              <input type="email" name="FormMail"
                class="w-full p-3 rounded bg-brand-dark-100 border border-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-brand-red transition"
                required />
            </div>

            <div class="md:col-span-2">
              <label class="block mb-2 text-sm font-medium text-gray-300">Mesaj</label>
              <textarea name="FormText" rows="5"
                class="w-full p-3 rounded bg-brand-dark-100 border border-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-brand-red resize-none transition"
                required></textarea>
            </div>

            <div class="md:col-span-2">
              <button type="submit"
                class="btn btn-primary group bg-brand-red text-white font-bold py-4 text-lg hover:bg-red-700 transition relative overflow-hidden w-full">
                <span class="bg-overlay"></span>
                <span class="border-anim top"></span><span class="border-anim bottom"></span><span
                  class="border-anim left"></span><span class="border-anim right"></span>
                <span class="text-content">Mesaj Gönder</span>
              </button>
            </div>
          </form>

          <% if (typeof message !=='undefined' ) { %>
            <div class="mt-6 text-center text-sm text-green-400 font-medium">
              <%= message %>
            </div>
            <% } %>
        </div>
      </div>
    </section>
  </main>

  <%- include('../../partials/footer') %>