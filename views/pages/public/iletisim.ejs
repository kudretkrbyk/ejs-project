<%- include('../../partials/header') %>

<main class="min-h-screen flex items-center justify-center bg-gray-900  px-4">
  <div class="w-full max-w-lg bg-brand-dark rounded-xl shadow-lg p-8 border border-gray-700">
    <h1 class="text-2xl font-bold text-white mb-6 text-center">İletişim</h1>
    <form action="/iletisim" method="POST" class="space-y-1">
      <!-- Ad Soyad -->
      <div>
        <label for="FormFullName" class="block text-sm font-medium text-gray-200 mb-1">Ad Soyad</label>
        <input
          type="text"
          id="FormFullName"
          name="FormFullName"
          required
          maxlength="100"
          placeholder="Adınızı ve soyadınızı girin"
          class="w-full px-4 py-2 border border-gray-600 bg-gray-900 text-gray-100 rounded-md focus:ring-2 focus:ring-brand-red focus:border-brand-red transition placeholder-gray-500"
        />
      </div>
      <!-- Telefon -->
      <div>
        <label for="FormNumber" class="block text-sm font-medium text-gray-200 mb-1">Telefon</label>
        <input
          type="tel"
          id="FormNumber"
          name="FormNumber"
          required
          maxlength="20"
          pattern="^[0-9\s\-\+\(\)]*$"
          placeholder="Telefon numaranız"
          class="w-full px-4 py-2 border border-gray-600 bg-gray-900 text-gray-100 rounded-md focus:ring-2 focus:ring-brand-red focus:border-brand-red transition placeholder-gray-500"
        />
      </div>
      <!-- Mail -->
      <div>
        <label for="FormMail" class="block text-sm font-medium text-gray-200 mb-1">E-posta</label>
        <input
          type="email"
          id="FormMail"
          name="FormMail"
          required
          maxlength="100"
          placeholder="E-posta adresiniz"
          class="w-full px-4 py-2 border border-gray-600 bg-gray-900 text-gray-100 rounded-md focus:ring-2 focus:ring-brand-red focus:border-brand-red transition placeholder-gray-500"
        />
      </div>
      <!-- Mesaj -->
      <div>
        <label for="FormText" class="block text-sm font-medium text-gray-200 mb-1">Mesajınız</label>
        <textarea
          id="FormText"
          name="FormText"
          required
          maxlength="1000"
          rows="5"
          placeholder="Mesajınızı yazın"
          class="w-full px-4 py-2 border border-gray-600 bg-gray-900 text-gray-100 rounded-md focus:ring-2 focus:ring-brand-red focus:border-brand-red transition resize-none placeholder-gray-500"
        ></textarea>
      </div>
      <!-- Gönder Butonu -->
      <div>
        <button type="submit"
        class="btn btn-primary group w-full font-bold py-3 px-4  shadow-lg  text-white text-lg relative overflow-hidden">
        <span class="bg-overlay"></span>
        <span class="border-anim top"></span><span class="border-anim bottom"></span><span
            class="border-anim left"></span><span class="border-anim right"></span>
        <span class="text-content">Giriş Yap</span>
    </button>
      </div>
    </form>
    <!-- Hata veya başarı mesajı için alan -->
    <% if (typeof message !== 'undefined') { %>
      <div class="mt-4 text-center text-sm text-red-400"><%= message %></div>
    <% } %>
  </div>
</main>

<%- include('../../partials/footer') %> 