<%- include('../../partials/header') %>

    <div class="relative w-full min-h-screen flex items-center justify-center animated-gradient">
        <div class="absolute inset-0 bg-black opacity-30 z-0"></div>
        <div class="container mx-auto px-4 md:px-6 flex justify-center items-center z-10">
            <div
                class="bg-brand-dark bg-opacity-90 w-full max-w-2xl rounded-xl shadow-2xl p-6 md:p-8 flex flex-col gap-6">
                <h1 class="text-3xl font-extrabold text-center text-white">Yeni Hesap Oluştur</h1>
                <form action="/kayit" method="POST" class="flex flex-wrap gap-4">
                    <div class="flex-1 min-w-[220px]">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Ad Soyad</label>
                        <input name="userName" type="text" required placeholder="Ad Soyad"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="flex-1 min-w-[220px]">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Telefon</label>
                        <input name="userPhone" type="tel" required placeholder="+90..."
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="w-full">
                        <label class="block text-gray-200 text-sm font-bold mb-2">E-posta</label>
                        <input name="userMail" type="email" required placeholder="ornek@mail.com"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="w-full">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Şifre</label>
                        <input name="userPassword" type="password" required placeholder="******************"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="w-full">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Adres</label>
                        <input name="userAdress" type="text" placeholder="Adresiniz"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="flex-1 min-w-[220px]">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Şirket Adı</label>
                        <input name="userCompactName" type="text" placeholder="Şirket Adı"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="flex-1 min-w-[220px]">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Şirket Telefon</label>
                        <input name="userCompactPhone" type="text" placeholder="Şirket Telefon"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <div class="w-full">
                        <label class="block text-gray-200 text-sm font-bold mb-2">Şirket Adres</label>
                        <input name="userCompactAdress" type="text" placeholder="Şirket Adres"
                            class="w-full py-3 px-4 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-brand-red transition" />
                    </div>
                    <% if (typeof error !=='undefined' ) { %>
                        <div class="w-full text-red-500 text-sm text-center">
                            <%= error %>
                        </div>
                        <% } %>
                            <div class="w-full">
                                <button type="submit"
                                    class="btn btn-primary group w-full font-bold py-3 text-lg relative overflow-hidden">
                                    <span class="bg-overlay"></span>
                                    <span class="border-anim top"></span><span class="border-anim bottom"></span><span
                                        class="border-anim left"></span><span class="border-anim right"></span>
                                    <span class="text-content">Kayıt Ol</span>
                                </button>
                                <p class="text-center text-gray-300 text-sm mt-6">Zaten bir hesabın var mı? <a
                                        href="/giris" class="font-bold text-brand-red hover:text-opacity-80">Giriş
                                        Yap</a>.</p>
                            </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>