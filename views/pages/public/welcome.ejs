<%- include('../../partials/header') %>

    <!-- Hero Section -->
    <section
        class="relative w-full min-h-screen flex flex-col md:flex-row items-center justify-between text-white bg-cover bg-center"
        style="background-image: url('/images/hero-bg.png');">
        <div class="absolute inset-0 bg-black bg-opacity-60 z-10"></div>

        <!-- Sol içerik -->
        <div class="relative z-20 p-6 md:w-1/2 flex flex-col items-center md:items-start text-center md:text-left">
            <h1 class="text-3xl sm:text-5xl lg:text-6xl font-extrabold leading-tight mb-6 drop-shadow-lg">
                Verinin Gücünü Serbest Bırakın
            </h1>
            <p class="text-base sm:text-lg md:text-xl text-gray-200 max-w-xl mb-8">
                Yeni nesil altyapımızla veritabanı işlemlerinizi hızlandırın, güvenliği en üst düzeye çıkarın ve iş
                akışlarınızı kesintisiz hale getirin.
            </p>
            <a href="/urunler"
                class="btn btn-primary group bg-brand-red text-white font-bold py-4 px-10 text-lg shadow-lg hover:bg-red-700 transition">
                <span class="bg-overlay"></span> <span class="border-anim top"></span><span
                    class="border-anim bottom"></span><span class="border-anim left"></span><span
                    class="border-anim right"></span> <span class="text-content text-nowrap">Keşfetmeye Başla</span>
            </a>
        </div>

        <!-- Sağdaki Lottie animasyon -->
        <div class="relative z-20 w-full md:w-1/2 flex items-center justify-center p-4">
            <div id="lottie" class="w-full max-w-[500px] md:max-w-[600px]"></div>
        </div>
    </section>

    <!-- Özelliklerimiz -->
    <section class="py-20 px-6 md:px-10 bg-brand-dark w-full">
        <div class="container mx-auto">
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12 text-center text-white">
                <div data-aos="fade-up" data-aos-delay="100">
                    <i class="fas fa-rocket text-4xl text-brand-red mb-3"></i>
                    <h3 class="text-xl font-bold">Işık Hızında</h3>
                    <p class="text-gray-400">NVMe disklerle inanılmaz okuma/yazma hızları.</p>
                </div>
                <div data-aos="fade-up" data-aos-delay="200">
                    <i class="fas fa-user-shield text-4xl text-brand-red mb-3"></i>
                    <h3 class="text-xl font-bold">DDoS Koruması</h3>
                    <p class="text-gray-400">Katman 7 koruma ile saldırılara karşı güvende.</p>
                </div>
                <div data-aos="fade-up" data-aos-delay="300">
                    <i class="fas fa-headset text-4xl text-brand-red mb-3"></i>
                    <h3 class="text-xl font-bold">Uzman Destek</h3>
                    <p class="text-gray-400">7/24 yanınızda olan profesyonel ekip.</p>
                </div>
                <div data-aos="fade-up" data-aos-delay="400">
                    <i class="fas fa-server text-4xl text-brand-red mb-3"></i>
                    <h3 class="text-xl font-bold">99.9% Uptime</h3>
                    <p class="text-gray-400">Kesintisiz ve güvenilir erişim garantisi.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- 3 Adımda Kolay Kurulum -->
    <section class="py-24 px-6 md:px-10 bg-gray-900 text-white">
        <div class="container mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-16" data-aos="fade-up">
                3 Adımda Kolay Kurulum
            </h2>
            <div class="grid md:grid-cols-3 gap-12 text-center">
                <div data-aos="fade-right">
                    <div
                        class="bg-gray-800 border-2 border-brand-red w-20 h-20 rounded-full mx-auto flex items-center justify-center text-3xl font-bold mb-4">
                        1</div>
                    <h3 class="text-2xl font-semibold">Paketini Seç</h3>
                    <p class="text-gray-400">İhtiyacınıza uygun veritabanı paketini belirleyin.</p>
                </div>
                <div data-aos="fade-up">
                    <div
                        class="bg-brand-dark-100 border-2 border-brand-red w-20 h-20 rounded-full mx-auto flex items-center justify-center text-3xl font-bold mb-4">
                        2</div>
                    <h3 class="text-2xl font-semibold">Anında Kurulum</h3>
                    <p class="text-gray-400">Sipariş sonrası hizmetiniz saniyeler içinde aktifleşir.</p>
                </div>
                <div data-aos="fade-left">
                    <div
                        class="bg-gray-800 border-2 border-brand-red w-20 h-20 rounded-full mx-auto flex items-center justify-center text-3xl font-bold mb-4">
                        3</div>
                    <h3 class="text-2xl font-semibold">Yönetmeye Başla</h3>
                    <p class="text-gray-400">Panel üzerinden kolayca yönetin.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Popüler Hizmetler -->
    <section class="py-20 px-2 md:px-10 bg-brand-dark-100">
        <div class="container mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-center text-white mb-12" data-aos="fade-up">
                En Popüler Hizmetlerimiz
            </h2>
            <%- include("../../partials/urun-hizmetler") %>
        </div>
    </section>

    <!-- Lottie script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            lottie.loadAnimation({
                container: document.getElementById('lottie'),
                renderer: 'svg',
                loop: true,
                autoplay: true,
                path: '/assets/AnimationHero.json'
            });
        });
    </script>

    <%- include('../../partials/footer') %>