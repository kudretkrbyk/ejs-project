<%- include('../../partials/header') %>

    <div class="bg-brand-dark-100 p-8 ">
        <h1 class="text-3xl font-bold mb-2 text-white">Hoş Geldin, <%= user.firstName %>!</h1>
        <p class="text-gray-300 mb-8">Hesabını ve hizmetlerini buradan yönetebilirsin.</p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% const cards=[ {href: '/urunlerim' , title: 'Hizmetlerim' ,
                desc: 'Satın aldığın aktif hizmetleri ve ürünleri görüntüle.' }, {href: '/destek' ,
                title: 'Destek Talepleri' , desc: 'Yeni bir destek talebi oluştur veya mevcut taleplerini takip et.' },
                {href: '/bildirimlerim' , title: 'Bildirimlerim' , desc: 'Hesabına gelen bildirimleri görüntüle.' },
                {href: '/veri-tabanlarim' , title: 'Veri Tabanı Bilgilerim' , desc: 'Veri tabanlarımı yönet.' } ]; %>
                <% cards.forEach(card=> { %>
                    <a href="<%= card.href %>"
                        class="block bg-brand-dark p-6 rounded-xl hover:scale-105 transition-transform duration-300 shadow-md hover:shadow-xl border border-gray-700">
                        <h2 class="text-xl font-bold text-brand-red mb-2">
                            <%= card.title %>
                        </h2>
                        <p class="text-gray-300">
                            <%= card.desc %>
                        </p>
                    </a>
                    <% }); %>
        </div>
    </div>

    <%- include('../../partials/footer') %>