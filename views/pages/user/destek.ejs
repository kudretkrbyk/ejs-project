<%- include('../../partials/header') %>

    <!-- Yeni Talep Modal'ı -->
    <div id="new-ticket-modal" class="fixed inset-0 bg-brand-dark  overflow-y-auto min-h-screen w-full hidden z-50">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-xl shadow-lg rounded-md bg-white">
            <div class="mt-3 text-center">
                <h3 class="text-2xl leading-6 font-bold text-gray-900">Yeni Destek Talebi</h3>
                <form action="/destek/yeni" method="POST" class="mt-4 px-7 py-3 text-left">
                    <div class="mb-4">
                        <label for="subject" class="block text-sm font-medium text-gray-700">Konu</label>
                        <input type="text" name="subject" id="subject"
                            class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-red-500 focus:border-red-500"
                            required>
                    </div>
                    <div class="mb-4">
                        <label for="message" class="block text-sm font-medium text-gray-700">Mesajınız</label>
                        <textarea name="message" id="message" rows="5"
                            class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-red-500 focus:border-red-500"
                            required></textarea>
                    </div>
                    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                        <button type="submit"
                            class="btn btn-primary group w-full sm:w-auto font-bold py-2 px-4 rounded-md">
                            <span class="bg-overlay"></span><span class="border-anim top"></span><span
                                class="border-anim bottom"></span><span class="border-anim left"></span><span
                                class="border-anim right"></span>
                            <span class="text-content">Destek Talebi Gönder</span>
                        </button>
                        <button type="button" @click="open = false"
                            class="btn btn-secondary group w-full sm:w-auto font-bold py-2 px-4 rounded-md mt-3 sm:mt-0 sm:mr-3">
                            <span class="bg-overlay"></span><span class="border-anim top"></span><span
                                class="border-anim bottom"></span><span class="border-anim left"></span><span
                                class="border-anim right"></span>
                            <span class="text-content">İptal</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="bg-white p-8 rounded-lg shadow-lg">
        <div class="flex justify-between items-center border-b pb-4 mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Destek Taleplerim</h1>
            <button id="new-ticket-btn"
                class="bg-brand-red hover:bg-opacity-90 text-white font-bold py-2 px-4 rounded transition-colors">
                Yeni Talep Oluştur
            </button>
        </div>

        <% if (data.tickets && data.tickets.length> 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white">
                    <thead class="bg-gray-800 text-white">
                        <tr>
                            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Talep ID</th>
                            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Konu</th>
                            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Durum</th>
                            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Oluşturulma Tarihi</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700">
                        <% data.tickets.forEach(ticket=> { %>
                            <tr class="border-b hover:bg-gray-100">
                                <td class="py-3 px-4">
                                    <%= ticket.id %>
                                </td>
                                <td class="py-3 px-4">
                                    <%= ticket.subject %>
                                </td>
                                <td class="py-3 px-4">
                                    <span class="py-1 px-3 rounded-full text-xs 
                                    <%= ticket.status === 'Açık' ? 'bg-yellow-200 text-yellow-800' : '' %>
                                    <%= ticket.status === 'Cevaplandı' ? 'bg-green-200 text-green-800' : '' %>
                                    <%= ticket.status === 'Kapandı' ? 'bg-gray-200 text-gray-800' : '' %>
                                ">
                                        <%= ticket.status %>
                                    </span>
                                </td>
                                <td class="py-3 px-4">
                                    <%= new Date(ticket.createdAt).toLocaleString('tr-TR') %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="text-center py-12">
                    <p class="text-gray-600 text-lg mb-4">Mevcut bir destek talebiniz bulunmuyor.</p>
                    <p class="text-gray-500">Bir sorunuz varsa, "Yeni Talep Oluştur" butonuna tıklayarak bize
                        ulaşabilirsiniz.</p>
                </div>
                <% } %>

    </div>

    <script>
        const modal = document.getElementById('new-ticket-modal');
        const openBtn = document.getElementById('new-ticket-btn');
        const closeBtn = document.getElementById('modal-close-btn');

        openBtn.addEventListener('click', () => {
            modal.classList.remove('hidden');
        });

        closeBtn.addEventListener('click', () => {
            modal.classList.add('hidden');
        });

        window.addEventListener('click', (event) => {
            if (event.target === modal) {
                modal.classList.add('hidden');
            }
        });
    </script>

    <%- include('../../partials/footer') %>