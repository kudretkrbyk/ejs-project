<section class="py-24 px-10 bg-brand-dark overflow-visible">
    <div class="container mx-auto px-6 md:px-0 overflow-visible">

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 overflow-visible">
            <% data.products.forEach((product, index)=> { %>
                <div data-aos="fade-up" data-aos-delay="<%= 100 * (index + 1) %>"
                    class="bg-brand-dark-100 overflow-visible rounded-xl shadow-lg p-8 flex flex-col text-white scale-95 hover:scale-100 transition-transform duration-500">
                    <h3 class="text-2xl font-bold text-brand-red mb-4">
                        <%= product.name %>
                    </h3>
                    <p class="text-4xl font-bold mb-6 flex items-end justify-start gap-2">
                        <%= product.price.split(' ')[0] %><span class="text-lg font-medium text-gray-400">TL/ay</span></p>
                        <ul class="space-y-3 text-gray-300 mb-8 flex-grow">
                            <% product.features.forEach(feature => { %>
                                <li class="flex items-start">
                                    <i class="fas fa-check-circle text-brand-red mr-3 mt-1"></i>
                                    <span><%= feature %></span>
                                </li>
                            <% }); %>
                        </ul>
                        <a href="/urunler" class="btn btn-primary group mt-auto font-bold py-3 px-8  w-full text-center">
                            <span class="bg-overlay"></span><span class="border-anim top"></span><span class="border-anim bottom"></span><span class="border-anim left"></span><span class="border-anim right"></span>
                           <span class="text-content">Hemen SatÄ±n Al</span>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>