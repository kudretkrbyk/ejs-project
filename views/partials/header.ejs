<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DataBen - <%= locals.data?.pageTitle || 'Sayfa' %>
    </title>
    <link href="/styles/output.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script src="https://unpkg.com/lottie-web@5.12.0/build/player/lottie.min.js"></script>

</head>

<body class=" overflow-x-hidden">

    <header class="bg-brand-dark text-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center p-4 px-10">
            <!-- En Sol: Hava Durumu -->
            <div class="flex items-center min-w-[120px]">
                <!-- Hava durumu örnek, ileride dinamik yapılabilir -->
                <span class="text-sm font-medium flex items-center gap-1">
                    <i class="fas fa-cloud-sun text-yellow-300"></i> İstanbul, 22°C
                </span>
            </div>

            <!-- Favicon ve Menülerin Ortalanması için Wrapper -->
            <div class="flex-1 flex flex-col items-center">
                <div class="flex items-center justify-center gap-8">
                    <!-- Faviconun Solundaki Menü -->
                    <nav class="hidden md:flex items-center space-x-4">
                        <a href="/" class="hover:text-brand-red transition-colors">Çözümlerimiz</a>
                        <a href="/urunler" class="hover:text-brand-red transition-colors">Forum</a>
                    </nav>
                    <!-- Ortada Favicon -->
                    <a href="/" class="relative w-10 h-10 group">
                        <!-- Normal Favicon -->
                        <img src="/images/favicon.png" alt="DataBen Favicon"
                            class="absolute inset-0 w-10 h-10 transition-opacity duration-500 opacity-100 group-hover:opacity-0" />

                        <!-- Hover (Kırmızı) Favicon -->
                        <img src="/images/favicon-red.png" alt="DataBen Favicon Hover"
                            class="absolute inset-0 w-10 h-10 transition-opacity duration-500 opacity-0 group-hover:opacity-100" />
                    </a>

                    <!-- Faviconun Sağındaki Menü -->
                    <nav class="hidden md:flex items-center space-x-4">
                        <a href="/hakkimizda" class="hover:text-brand-red transition-colors">Hakkımızda</a>
                        <a href="/iletisim" class="hover:text-brand-red transition-colors">İletişim</a>
                    </nav>
                </div>
            </div>

            <!-- En Sağ: Kullanıcı İkonu ve Butonlar -->
            <div class="flex items-center space-x-4 min-w-[120px] justify-end">
                <!-- Kullanıcı ikonu: Giriş yaptıysa panel/admin, yapmadıysa giriş ekranı -->
                <a href="<%= locals.user ? (locals.user.isAdmin ? '/admin' : '/panel') : '/giris' %>" class="block">
                    <img src="/images/user-circle-svgrepo-com.svg" alt="Kullanıcı Paneli"
                        class="w-9 h-9 rounded-full  hover:scale-105 transition-transform" />
                </a>
                <% if (locals.user) { %>
                    <a href="/cikis" class="btn btn-secondary group font-semibold py-2 px-4 ">
                        <span class="bg-overlay"></span>
                        <span class="border-anim top"></span><span class="border-anim bottom"></span><span
                            class="border-anim left"></span><span class="border-anim right"></span>
                        <span class="text-content">Çıkış Yap</span>
                    </a>
                    <% } %>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-white focus:outline-none">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </div>
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-gray-700">
            <nav class="flex flex-col items-center space-y-4 py-4">
                <a href="/" class="hover:text-brand-red transition-colors">Ana Sayfa</a>
                <a href="/urunler" class="hover:text-brand-red transition-colors">Ürünler</a>
                <a href="/sss" class="hover:text-brand-red transition-colors">SSS</a>
                <a href="/bilgi-bankasi" class="hover:text-brand-red transition-colors">Bilgi Bankası</a>
                <div class="pt-4 border-t border-gray-600 w-full flex flex-col items-center space-y-4">
                    <% if (locals.user) { %>
                        <a href="<%= locals.user.isAdmin ? '/admin' : '/panel' %>"
                            class="btn btn-primary group font-semibold py-2 px-4 rounded-md w-3/4 text-center">
                            <span class="bg-overlay"></span><span class="border-anim top"></span><span
                                class="border-anim bottom"></span><span class="border-anim left"></span><span
                                class="border-anim right"></span>
                            <span class="text-content">
                                <%= locals.user.isAdmin ? 'Admin Paneli' : 'Panelim' %>
                            </span>
                        </a>
                        <a href="/cikis"
                            class="btn btn-secondary group font-semibold py-2 px-4 rounded-md w-3/4 text-center">
                            <span class="bg-overlay"></span><span class="border-anim top"></span><span
                                class="border-anim bottom"></span><span class="border-anim left"></span><span
                                class="border-anim right"></span>
                            <span class="text-content">Çıkış Yap</span>
                        </a>
                        <% } else { %>
                            <a href="/giris"
                                class="btn btn-primary group font-semibold py-2 px-4 rounded-md w-3/4 text-center">
                                <span class="bg-overlay"></span><span class="border-anim top"></span><span
                                    class="border-anim bottom"></span><span class="border-anim left"></span><span
                                    class="border-anim right"></span>
                                <span class="text-content">Giriş Yap</span>
                            </a>
                            <a href="/kayit"
                                class="btn btn-secondary group font-semibold py-2 px-4 rounded-md w-3/4 text-center">
                                <span class="bg-overlay"></span><span class="border-anim top"></span><span
                                    class="border-anim bottom"></span><span class="border-anim left"></span><span
                                    class="border-anim right"></span>
                                <span class="text-content">Kayıt Ol</span>
                            </a>
                            <% } %>
                </div>
            </nav>
        </div>
    </header>

    <main class="container mx-auto ">

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const mobileMenuButton = document.getElementById('mobile-menu-button');
                const mobileMenu = document.getElementById('mobile-menu');

                if (mobileMenuButton) {
                    mobileMenuButton.addEventListener('click', () => {
                        mobileMenu.classList.toggle('hidden');
                    });
                }
            });
        </script>